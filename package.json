{
	"name": "cuttlebelle",
	"description": "The react static site generator that separates editing and code concerns",
	"version": "1.0.0-alpha.57",
	"homepage": "http://cuttlebelle.com",
	"author": {
		"name": "Dominik Wilkowski",
		"email": "Hi@Dominik-Wilkowski.com",
		"url": "https://dominik-wilkowski.com/"
	},
	"contributors": [
		{
			"name": "Dominik Wilkowski",
			"email": "Hi@Dominik-Wilkowski.com",
			"url": "https://dominik-wilkowski.com/"
		}
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/cuttlebelle/cuttlebelle.git"
	},
	"bugs": {
		"url": "https://github.com/cuttlebelle/cuttlebelle/issues"
	},
	"licenses": [
		{
			"type": "GPL-3.0",
			"url": "https://github.com/cuttlebelle/cuttlebelle/blob/master/LICENSE"
		}
	],
	"engines": {
		"node": ">=6"
	},
	"scripts": {
		"prepublish": "yarn build && yarn test && yarn man",
		"test": "yarn test:end-to-end && yarn test:unit-test && yarn test:flow",
		"test:unit-test": "jest",
		"test:detail": "jest --coverage",
		"test:watch": "jest --watch --coverage",
		"test:end-to-end": "node tests/tester.js",
		"test:flow": "flow check",
		"man": "node man/build.js",
		"build": "yarn build:js",
		"build:js": "babel src --out-dir dist",
		"build:watch": "yarn build:js && yarn test:detail",
		"watch": "yarn build && yarn test && onchange 'src/*.js' '__tests__/*.js' -- yarn build:watch",
		"nuke": "rm -rf dist && rm -rf node_modules && rm yarn.lock"
	},
	"dependencies": {
		"@babel/core": "^7.2.2",
		"@babel/plugin-proposal-object-rest-spread": "^7.3.2",
		"@babel/plugin-syntax-dynamic-import": "^7.2.0",
		"@babel/plugin-transform-runtime": "^7.2.0",
		"@babel/preset-env": "7.3.1",
		"@babel/preset-react": "^7.0.0",
		"@babel/register": "^7.0.0",
		"@babel/runtime": "^7.3.1",
		"babel-plugin-import-redirect": "^1.1.1",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
		"browser-sync": "^2.26.3",
		"del": "^3.0.0",
		"fs-extra": "^7.0.1",
		"js-yaml": "^3.12.1",
		"marked": "^0.6.0",
		"node-notifier": "^5.4.0",
		"prettify-html": "^0.0.2",
		"prop-types": "^15.6.2",
		"react": "^16.7.0",
		"react-docgen": "^3.0.0",
		"react-dom": "^16.7.0",
		"require-from-string": "^2.0.2",
		"slugify": "^1.3.4",
		"traverse": "^0.6.6",
		"window-size": "^1.1.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"chalk": "^2.4.2",
		"copy-dir": "^0.4.0",
		"dirsum": "^0.1.1",
		"flow-bin": "^0.92.1",
		"jest-cli": "^24.0.0",
		"marked-man": "^0.4.2",
		"onchange": "^5.2.0",
		"replace-in-file": "^3.4.3"
	},
	"jest": {
		"testEnvironment": "node",
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"src/*.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	},
	"keywords": [
		"static site generator",
		"react.js",
		"editing",
		"CLI",
		"rapid prototying",
		"pretty"
	],
	"files": [
		".template/*",
		"dist/*",
		"assets/*",
		"man/*",
		".babelrc"
	],
	"main": "dist/index.js",
	"bin": {
		"cuttlebelle": "./dist/index.js"
	},
	"directories": {
		"man": "man"
	},
	"license": "GPL-3.0"
}
