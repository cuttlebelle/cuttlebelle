{
	"name": "cuttlebelle",
	"description": "The react static site generator that separates editing and code concerns",
	"version": "1.0.0-alpha.57",
	"homepage": "http://cuttlebelle.com",
	"author": {
		"name": "Dominik Wilkowski",
		"email": "Hi@Dominik-Wilkowski.com",
		"url": "https://dominik-wilkowski.com/"
	},
	"contributors": [
		{
			"name": "Dominik Wilkowski",
			"email": "Hi@Dominik-Wilkowski.com",
			"url": "https://dominik-wilkowski.com/"
		}
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/cuttlebelle/cuttlebelle.git"
	},
	"bugs": {
		"url": "https://github.com/cuttlebelle/cuttlebelle/issues"
	},
	"licenses": [
		{
			"type": "GPL-3.0",
			"url": "https://github.com/cuttlebelle/cuttlebelle/blob/master/LICENSE"
		}
	],
	"engines": {
		"node": ">=6"
	},
	"scripts": {
		"prepublish": "npm run test && npm run man",
		"test": "npm run build && npm run test:end-to-end && npm run test:unit-test",
		"test:unit-test": "jest",
		"test:detail": "jest --coverage",
		"test:watch": "jest --watch --coverage",
		"test:end-to-end": "node tests/tester.js",
		"man": "node man/build.js",
		"build": "npm run build:js",
		"build:js": "babel src --out-dir dist",
		"build:watch": "npm run build:js && npm run test:detail",
		"watch": "npm run build && npm run test && onchange 'src/*.js' '__tests__/*.js' -- npm run build:watch",
		"flow": "flow check"
	},
	"dependencies": {
		"babel-plugin-import-redirect": "^1.1.1",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "1.7.0",
		"babel-preset-react": "^6.24.1",
		"babel-register": "^6.26.0",
		"babel-runtime": "^6.26.0",
		"browser-sync": "^2.24.5",
		"del": "^3.0.0",
		"fs-extra": "^6.0.1",
		"js-yaml": "^3.12.0",
		"marked": "^0.4.0",
		"node-notifier": "^5.2.1",
		"pretty": "^2.0.0",
		"prop-types": "^15.6.2",
		"react": "^16.4.1",
		"react-docgen": "^2.21.0",
		"react-dom": "^16.4.1",
		"require-from-string": "^2.0.2",
		"slugify": "^1.3.0",
		"traverse": "^0.6.6",
		"upath": "^1.1.0",
		"window-size": "^1.1.0"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"chalk": "^2.4.1",
		"copy-dir": "^0.3.0",
		"dirsum": "^0.1.1",
		"flow-bin": "^0.75.0",
		"jest-cli": "^23.2.0",
		"marked-man": "^0.2.1",
		"onchange": "^4.0.0",
		"replace-in-file": "^3.4.0"
	},
	"jest": {
		"testEnvironment": "node",
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"src/*.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	},
	"keywords": [
		"static site generator",
		"react.js",
		"editing",
		"CLI",
		"rapid prototying",
		"pretty"
	],
	"files": [
		".template/*",
		"dist/*",
		"assets/*",
		"man/*",
		".babelrc"
	],
	"main": "dist/index.js",
	"bin": {
		"cuttlebelle": "./dist/index.js"
	},
	"directories": {
		"man": "man"
	},
	"license": "GPL-3.0"
}
