{
	"name": "cuttlebelle",
	"description": "The react static site generator that separates editing and code concerns",
	"version": "1.0.0-alpha.79",
	"homepage": "http://cuttlebelle.com",
	"author": {
		"name": "Dominik Wilkowski",
		"email": "Hi@Dominik-Wilkowski.com",
		"url": "https://dominik-wilkowski.com/"
	},
	"contributors": [
		{
			"name": "Dominik Wilkowski",
			"email": "Hi@Dominik-Wilkowski.com",
			"url": "https://dominik-wilkowski.com/"
		}
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/cuttlebelle/cuttlebelle.git"
	},
	"bugs": {
		"url": "https://github.com/cuttlebelle/cuttlebelle/issues"
	},
	"licenses": [
		{
			"type": "GPL-3.0",
			"url": "https://github.com/cuttlebelle/cuttlebelle/blob/master/LICENSE"
		}
	],
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"prepublish": "yarn build && yarn test && yarn man",
		"test": "yarn test:end-to-end && yarn test:unit",
		"test:unit": "jest",
		"test:detail": "jest --coverage",
		"test:watch": "jest --watch --coverage",
		"test:end-to-end": "node tests/tester.js",
		"test:flow": "flow check",
		"man": "# node man/build.js",
		"build": "yarn build:js",
		"build:js": "babel src --out-dir dist",
		"build:watch": "yarn build:js && yarn test:detail",
		"watch": "yarn build && yarn test && onchange 'src/*.js' '__tests__/*.js' -- yarn build:watch",
		"nuke": "rm -rf dist && rm -rf node_modules && rm yarn.lock"
	},
	"dependencies": {
		"@babel/core": "^7",
		"@babel/plugin-proposal-object-rest-spread": "^7",
		"@babel/plugin-syntax-dynamic-import": "^7",
		"@babel/plugin-transform-arrow-functions": "^7.18.6",
		"@babel/plugin-transform-runtime": "^7",
		"@babel/preset-env": "^7",
		"@babel/preset-react": "^7",
		"@babel/register": "^7",
		"@babel/runtime": "^7",
		"babel-plugin-import-redirect": "^1",
		"babel-plugin-transform-es2015-modules-commonjs": "^6",
		"browser-sync": "^2",
		"del": "^6",
		"fs-extra": "^10",
		"js-yaml": "^4",
		"marked": "^4",
		"node-notifier": "^10",
		"prettify-html": "^0.0.2",
		"prop-types": "^15",
		"react": "^18",
		"react-docgen": "^5",
		"react-dom": "^18",
		"require-from-string": "^2",
		"slugify": "^1",
		"traverse": "^0.6.7",
		"window-size": "^1"
	},
	"devDependencies": {
		"@babel/cli": "^7",
		"chalk": "^4",
		"copy-dir": "^1",
		"diff": "^5",
		"dirsum": "^0.1.1",
		"flow-bin": "^0.191.0",
		"jest-cli": "^29",
		"marked-man": "^0.7.0",
		"onchange": "^7",
		"replace-in-file": "^6"
	},
	"jest": {
		"testEnvironment": "node",
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"src/*.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	},
	"keywords": [
		"static site generator",
		"react.js",
		"editing",
		"CLI",
		"rapid prototying",
		"pretty"
	],
	"files": [
		".template/*",
		"dist/*",
		"assets/*",
		"man/*",
		".babelrc"
	],
	"main": "dist/index.js",
	"bin": {
		"cuttlebelle": "./dist/index.js"
	},
	"directories": {
		"man": "man"
	},
	"license": "GPL-3.0"
}
